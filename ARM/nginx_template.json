{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "containerName": {
        "type": "string",
        "defaultValue": "mynginx",
        "metadata": { "description": "Container name" }
      },
      "location": {
        "type": "string",
        "defaultValue": "[resourceGroup().location]",
        "metadata": { "description": "Azure region" }
      }
    },
    "resources": [
      {
        "type": "Microsoft.ContainerInstance/containerGroups",
        "apiVersion": "2023-05-01",
        "name": "[parameters('containerName')]",
        "location": "[parameters('location')]",
        "properties": {
          "containers": [
            {
              "name": "nginx",
              "properties": {
                "image": "nginx:latest",
                "ports": [
                  { "port": 80 }
                ],
                "resources": {
                  "requests": {
                    "cpu": 1,
                    "memoryInGb": 1.5
                  }
                }
              }
            }
          ],
          "osType": "Linux",
          "ipAddress": {
            "type": "Public",
            "ports": [
              { "protocol": "tcp", "port": 80 }
            ]
          }
        }
      }
    ],
    "outputs": {
      "nginxUrl": {
        "type": "string",
        "value": "[concat('http://', reference(resourceId('Microsoft.ContainerInstance/containerGroups', parameters('containerName'))).ipAddress.ip, ':80')]"
      }
    }
  }
{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "languageVersion": "2.0",

  "definitions": {
    "storageConfig": {
      "type": "object",
      "metadata": {
        "description": "Storage account configuration schema"
      },
      "properties": {
        "namePrefix": {
          "type": "string",
          "metadata": {
            "description": "Prefix for storage account name"
          }
        },
        "sku": {
          "type": "string",
          "metadata": {
            "allowedValues": ["Standard_LRS", "Standard_GRS", "Standard_ZRS", "Premium_LRS"],
            "description": "Storage account SKU"
          }
        }
      }
    }
  },

  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Azure region for resources"
      }
    },
    "storageSettings": {
      "type": "object",
      "defaultValue": {
        "namePrefix": "stor",
        "sku": "Standard_LRS"
      },
      "metadata": {
        "description": "Storage configuration conforming to the defined schema"
      }
    }
  },

  "variables": {
    "storageAccountName": "[concat(parameters('storageSettings').namePrefix, uniqueString(resourceGroup().id))]"
  },

  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2023-01-01",
      "name": "[variables('storageAccountName')]",
      "location": "[parameters('location')]",
      "kind": "StorageV2",
      "sku": {
        "name": "[parameters('storageSettings').sku]"
      },
      "properties": {
        "supportsHttpsTrafficOnly": true
      }
    }
  ],

  "outputs": {
    "storageAccountName": {
      "type": "string",
      "value": "[variables('storageAccountName')]"
    },
    "storageAccountId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
    }
  }
}